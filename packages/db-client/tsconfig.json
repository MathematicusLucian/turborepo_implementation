{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "baseUrl": "../db-client",
    "paths": {
      "@repo/db-client/*": [
        "../db-client/dist/*"
      ]
    },
    "module": "ESNext", // required for ESM
    "moduleResolution": "bundler", // ensures .js extension in imports
    "noEmit": false, // ensure build emits output
    "outDir": "../db-client/dist",
    "rootDir": "../db-client/src",
    "allowImportingTsExtensions": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true
  },
  "main": "dist/index.js",
  "include": [
    "../db-client/src"
  ],
  "exclude": [
    "../db-client/node_modules"
  ]
}