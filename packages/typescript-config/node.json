{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node",
    "extends": "./base.json",
    "compilerOptions": {
        "composite": true,
        "outDir": "dist",
        "rootDir": "src",
        "jsx": "react-jsx",
        "jsxImportSource": "hono/jsx"
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}